{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "web/static/js",
    "rootDir": "web/src",
    "baseUrl": ".",
    "paths": {
      "lightweight-charts": ["node_modules/lightweight-charts"]
    }
  },
  "include": ["web/src/**/*.ts"],
  "exclude": ["node_modules"]
}
